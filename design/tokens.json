{
  "style_name": "Skillio CLI Modern",
  "description": "Dark theme developer tool landing page inspired by Linear and modern CLI tools. Emphasizes code examples, terminal aesthetics, and clean typography.",
  "colors": {
    "background": "#0A0A0B",
    "surface": "#111113",
    "surface_elevated": "#18181B",
    "primary": "#3B82F6",
    "primary_hover": "#2563EB",
    "primary_glow": "rgba(59, 130, 246, 0.15)",
    "accent": "#10B981",
    "accent_secondary": "#8B5CF6",
    "text_main": "#FAFAFA",
    "text_secondary": "#A1A1AA",
    "text_muted": "#71717A",
    "border": "#27272A",
    "border_subtle": "#1F1F23",
    "code_bg": "#0D0D0F",
    "code_text": "#E4E4E7",
    "terminal_green": "#22C55E",
    "terminal_yellow": "#FACC15",
    "terminal_red": "#EF4444",
    "terminal_blue": "#60A5FA",
    "terminal_purple": "#A78BFA"
  },
  "gradients": {
    "hero_glow": "radial-gradient(ellipse 80% 50% at 50% -20%, rgba(59, 130, 246, 0.15), transparent)",
    "text_gradient": "linear-gradient(to right, #3B82F6, #8B5CF6)",
    "card_border": "linear-gradient(to bottom, rgba(255,255,255,0.1), rgba(255,255,255,0.02))"
  },
  "typography": {
    "font_heading": "Inter, -apple-system, BlinkMacSystemFont, sans-serif",
    "font_body": "Inter, -apple-system, BlinkMacSystemFont, sans-serif",
    "font_mono": "JetBrains Mono, Fira Code, Consolas, monospace",
    "sizes": {
      "hero_title": "4rem",
      "hero_subtitle": "1.25rem",
      "heading_1": "2.5rem",
      "heading_2": "2rem",
      "heading_3": "1.5rem",
      "body": "1rem",
      "body_large": "1.125rem",
      "small": "0.875rem",
      "code": "0.9rem"
    },
    "weights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "line_heights": {
      "tight": 1.1,
      "normal": 1.5,
      "relaxed": 1.7
    }
  },
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px",
    "2xl": "48px",
    "3xl": "64px",
    "4xl": "96px",
    "section": "120px"
  },
  "radius": {
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "xl": "16px",
    "2xl": "24px",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px rgba(0, 0, 0, 0.4)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.5)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.5)",
    "glow_primary": "0 0 40px rgba(59, 130, 246, 0.3)",
    "glow_accent": "0 0 40px rgba(16, 185, 129, 0.3)"
  },
  "animations": {
    "duration_fast": "150ms",
    "duration_normal": "300ms",
    "duration_slow": "500ms",
    "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px"
  },
  "components": {
    "button_primary": {
      "bg": "#3B82F6",
      "bg_hover": "#2563EB",
      "text": "#FFFFFF",
      "padding": "12px 24px",
      "radius": "8px",
      "font_weight": 500
    },
    "button_secondary": {
      "bg": "transparent",
      "bg_hover": "rgba(255, 255, 255, 0.05)",
      "border": "1px solid #27272A",
      "text": "#FAFAFA",
      "padding": "12px 24px",
      "radius": "8px"
    },
    "code_block": {
      "bg": "#0D0D0F",
      "border": "1px solid #27272A",
      "radius": "12px",
      "padding": "24px"
    },
    "terminal": {
      "bg": "#0D0D0F",
      "header_bg": "#18181B",
      "border": "1px solid #27272A",
      "radius": "12px",
      "header_dots": ["#EF4444", "#FACC15", "#22C55E"]
    },
    "card": {
      "bg": "#111113",
      "bg_hover": "#18181B",
      "border": "1px solid #27272A",
      "radius": "16px",
      "padding": "24px"
    }
  },
  "usage": "CLI/Terminal developer tools, package managers, AI skills marketplace. Dark theme optimized for developers who prefer terminal environments."
}
